{
  "manifest_version": 2,

  "name": "Stock Screener for Chrome",
  "description": "Provides a customizable snapshot of market data for an indivdual position or a saved watchlist/portfolio.",
  "version": "1.0",
   "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery.js"]
    }
  ],
  "options_ui": {
    // Required.
    "page": "options.html",
    // Recommended.
    "chrome_style": true
  },
  "icons": { "16": "icon.png",
           "48": "icon.png",
          "128": "icon.png" },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
	"default_title": "Stock Screener for Chrome"
  },
  "background": {
  "scripts": ["background.js"]
},
  
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
	"storage"
  ]
}
